{
    "manifest_version" : 2,
    "name" : "__MSG_ext_title__",
    "short_name" : "__MSG_ext_short_name__",
    "version" : "0.0.1.6",
    "description" : "__MSG_ext_description__",
    "author" : "furyu",
    "default_locale" : "ja",
    "icons" : {
        "16" : "img/icon_16.png",
        "48" : "img/icon_48.png",
        "64" : "img/icon_64.png",
        "96" : "img/icon_96.png",
        "128" : "img/icon_128.png"
    },
    "permissions" : [
        "webRequest",
        "webRequestBlocking",
        "*://*.twimg.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*"
    ],
    "web_accessible_resources" : [
        "js/*.js"
    ],
    "content_scripts" : [{
        "matches" : [
            "*://*.twitter.com/*",
            "*://*.x.com/*"
        ],
        "js" : [
            "js/start.js"
        ],
        "run_at" : "document_start",
        "all_frames" : false
    }],
    "background" : {
        "scripts" : ["js/background.firefox.js"]
    },
    "browser_specific_settings" : {
        "gecko": {
            "id": "ReviveTweet@furyutei.com"
        }
    }
}
