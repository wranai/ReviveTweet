{
    "manifest_version" : 3,
    "name" : "「ツイート」よ、蘇れ！",
    "short_name" : "RVTW",
    "version" : "0.0.1.4",
    "description" : "「ツイート」/「リツイート」の文字を復活させますっ！",
    "author" : "furyu",
    "content_scripts" : [{
        "matches" : [
            "*://*.twitter.com/*",
            "*://*.x.com/*"
        ],
        "js" : [
            "js/start.js"
        ],
        "run_at" : "document_start",
        "all_frames" : false
    }],
    "background"  : {
        "service_worker" : "background-wrapper.js"
    },
    "permissions" : [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback"
    ],
    "host_permissions" : [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
    ],
    "web_accessible_resources" : [{
        "matches" : [
            "*://*.twitter.com/*",
            "*://*.x.com/*"
        ],
        "resources" : [
            "js/*.js"
        ]
    }]
}
